<div class="container">
  <h1>Your Lists</h1>
  <%= link_to "New", new_list_path, class:"btn btn-secondary" %>

  <ul>
    <% @lists.each do |list| %>
      <div class="card m-3">
        <div class="card-body">
          <li style="list-style: none;"> <%= link_to list.name, list_path(list) %></li>
        </div>
      </div>
    <% end %>
  </ul>
</div>
